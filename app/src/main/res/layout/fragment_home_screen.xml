<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_ham_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hs_rl_button_bg_top">

        <Button
            android:id="@+id/hamburger"
            android:layout_width="28dp"
            android:layout_height="29dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="14dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/hamburger" />

        <Button
            android:id="@+id/mood"
            android:layout_width="28dp"
            android:layout_height="29dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/mood" />

    </RelativeLayout>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_dish_name_type_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_ham_mood"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="34dp"
        card_view:cardBackgroundColor="#00000000"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="0dp">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview_background">

            <RelativeLayout
                android:id="@+id/rl_veg_egg_non"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

                <ImageView
                    android:id="@+id/veg_tag"
                    android:layout_width="13.7dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="5.7dp"
                    android:visibility="gone"
                    android:src="@drawable/veg"/>

                <ImageView
                    android:id="@+id/egg_tag"
                    android:layout_width="13.7dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="5.7dp"
                    android:visibility="gone"
                    android:src="@drawable/egg"/>

                <ImageView
                    android:id="@+id/non_veg_tag"
                    android:layout_width="13.7dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="5.7dp"
                    android:visibility="gone"
                    android:src="@drawable/non_veg"/>

                <ImageView
                    android:id="@+id/spicy_tag"
                    android:layout_width="13.7dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="5dp"
                    android:visibility="gone"
                    android:src="@drawable/spicy"/>

                <ImageView
                    android:id="@+id/alcohol_tag"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="5dp"
                    android:visibility="gone"
                    android:src="@drawable/alcohol"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="18dp"
                android:textSize="@dimen/text_size_20"
                android:layout_toEndOf="@+id/rl_veg_egg_non"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/dish_type"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_below="@+id/rl_veg_egg_non"
                android:textColor="@color/white"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/food_tags"
        android:layout_above="@+id/rl_fav_dine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:maxLines="5"
        android:gravity="start|center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:textSize="@dimen/text_size_12"
        android:layout_marginEnd="40dp"
        android:background="#40000000"/>

    <RelativeLayout
        android:id="@+id/rl_fav_dine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/hs_rl_button_bg_bottom">


        <ToggleButton
            android:id="@+id/favourites"
            android:layout_width="28dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:text="@null"
            android:textOn="@null"
            android:textOff="@null"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/home_toggle_button" />

        <Button
            android:id="@+id/dining"
            android:layout_width="28dp"
            android:layout_height="29dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="14dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/eat" />

    </RelativeLayout>

</RelativeLayout>