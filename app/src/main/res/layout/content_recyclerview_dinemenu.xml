<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DineoutMenuActivity"
    tools:showIn="@layout/content_dineout_menu">

    <android.support.v7.widget.CardView
        android:id="@+id/rl_cv_dine_menu_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="10.7dp">

        <RelativeLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:background="#09000000">

            <TextView
                android:id="@+id/dinemenu_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9.3dp"
                android:paddingStart="12.7dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/dinemenu_rest_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dinemenu_tags"
                android:layout_marginTop="12dp"
                android:paddingStart="12.7dp"
                android:paddingEnd="20dp"
                android:textColor="#70000000"
                android:textSize="@dimen/text_size_13"/>

            <TextView
                android:id="@+id/dinemenu_rest_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dinemenu_rest_type"
                android:layout_marginBottom="8.7dp"
                android:layout_marginTop="12dp"
                android:paddingStart="12.7dp"
                android:paddingEnd="20dp"
                android:textColor="#70000000"
                android:textSize="@dimen/text_size_13"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/personalized_menu_text"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_cv_dine_menu_content"
        android:maxLines="3"
        android:layout_marginStart="12.7dp"
        android:text="@string/personalized_menu_text"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dine_menu_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/rl_cv_dine_menu_content" />

    <FrameLayout
        android:layout_below="@+id/dine_menu_recyclerview"
        android:layout_width="match_parent"
        android:background="@null"
        android:layout_height="80dp"/>

</RelativeLayout>