<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboardingfirst"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="9dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hi_name"
            android:textColor="@color/white"
            android:layout_marginStart="14dp"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/text_size_24" />

        <TextView
            android:id="@+id/tell_about_prefs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="14dp"
            android:text="@string/tell_about_prefs"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20" />

        <Button
            android:id="@+id/are_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:paddingStart="14dp"
            android:paddingEnd="20dp"
            android:background="@drawable/onboarding_ques_button"
            android:clickable="false"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="@string/are_you"
            android:textSize="@dimen/text_size_22" />

        <RelativeLayout
            android:id="@+id/veg_dish"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/veg_dish">

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/veg_selection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:visibility="gone"
                android:foreground="@color/black"/>

            <ImageView
                android:id="@+id/veg_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/onboarding_tick_mark"
                android:contentDescription="@string/vegetarian"
                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/vegetarian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="95dp"
                android:layout_marginStart="10dp"
                android:text="@string/vegetarian"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/egg_dish"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/egg_dish">

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/egg_selection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:visibility="gone"
                android:foreground="@color/black"/>

            <ImageView
                android:id="@+id/egg_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/onboarding_tick_mark"
                android:contentDescription="@string/eggetarian"
                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/eggetarian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="95dp"
                android:layout_marginStart="10dp"
                android:text="@string/eggetarian"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/non_veg_dish"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/non_veg_dish">

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/non_veg_selection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:visibility="gone"
                android:foreground="@color/black"/>

            <ImageView
                android:id="@+id/non_veg_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/onboarding_tick_mark"
                android:contentDescription="@string/non_veg"
                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/non_veg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="95dp"
                android:layout_marginStart="10dp"
                android:text="@string/non_veg"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>